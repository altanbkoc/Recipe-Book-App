<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/acikkahve"
    tools:context=".view.TarifFragment">

    <EditText
        android:id="@+id/malzemeText"
        android:layout_width="342dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/text_back2"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Malzemeleri giriniz"
        android:inputType="text"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/isimText" />

    <ImageView
        android:id="@+id/yemekResim"
        android:layout_width="355dp"
        android:layout_height="194dp"
        android:layout_marginTop="52dp"
        android:contentDescription="Yemek resmi"
        android:onClick="yemekResmiEkle"
        android:scaleType="fitCenter"
        android:src="@drawable/yemek"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/isimText"
        android:layout_width="341dp"
        android:layout_height="50dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/text_back2"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Yemek ismini giriniz"
        android:inputType="text"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yemekResim" />


    <EditText
        android:id="@+id/tarifText"
        android:layout_width="341dp"
        android:layout_height="179dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/text_back2"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:gravity="start|top"
        android:hint="Tarif"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/malzemeText" />

    <Button
        android:id="@+id/buttonKaydet"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/kahve"
        android:fontFamily="sans-serif-light"
        android:onClick="yemekKaydet"
        android:text="Kaydet"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tarifText" />

</androidx.constraintlayout.widget.ConstraintLayout>


